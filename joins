use <new databse name>
create table dept(id INT, dept_name VARCHAR(100));
create table emp(id INT, Name VARCHAR(100), dept_id INT,manager_id INT);

insert into dept values(1,'HR'),(2,'Finance'),(3,'Engg'),(4,'Sales');
insert into emp values(1,'A',1,NULL),(2,'B',2,1),(3,'C',3,1),(4,'D',4,2),(5,'E',2,3);

select emp.name, dept.dept_name from emp inner join dept on emp.dept_id=dept.id; 
select emp.name, dept.dept_name from emp left join dept on emp.dept_id=dept.id;
select emp.name, dept.dept_name from emp right join dept on emp.dept_id=dept.id;
 select emp.name, dept.dept_name from emp cross join dept;


##Advance 
select e.name as Employee_Name, d.dept_name as Department_Name from emp e inner join dept d on e.dept_id=d.id;
